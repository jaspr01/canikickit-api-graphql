{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2021",
    "outDir": "dist",
    "baseUrl": "src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node"],
    "strict": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
}
